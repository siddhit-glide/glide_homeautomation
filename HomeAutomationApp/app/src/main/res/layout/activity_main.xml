<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonLivingRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living Room"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/buttonBedroom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedroom 1"
        android:textSize="20dp"
        android:layout_below="@id/buttonLivingRoom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buttonBedroom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedroom 2"
        android:textSize="20dp"
        android:layout_below="@id/buttonBedroom1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buttonKitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen"
        android:textSize="20dp"
        android:layout_below="@id/buttonBedroom2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
